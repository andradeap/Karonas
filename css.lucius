html, body {
    height: 100%;
    border: 1px;
}

html {
    display: table;
    margin: auto;
}

body {
    display: table-cell;
    vertical-align: middle;
    background-color: #A3F06C;
    font-family: Verdana, Sans Serif;
    font-size: 17px;
}

nav {
    font-size: 14px;
}

a {
    color: #00AC6B;
}

h1 {
    font-size: 23px;
}

h1,h2 {
    color: #FF4F00;
}